{
  "name": "koa-ts-controllers",
  "version": "2.0.1",
  "description": "This is a Typescript routing controller system for KoaJS 2+. Define your REST API endpoints using classes and decorators.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "koa",
    "router",
    "typescript",
    "controller",
    "rest",
    "api",
    "versioning",
    "openapi 3",
    "oas3"
  ],
  "repository": {
    "type": "github",
    "url": "https://github.com/iyobo/koa-ts-controllers"
  },
  "scripts": {
    "test": "jest --config jestconfig.json",
    "test:watch": "jest --config jestconfig.json --watch",
    "build": "tsc",
    "prepublish": "tsc && npm test",
    "dev": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "tslint -c tslint.json -p tsconfig.json --fix"
  },
  "files": [
    "dist/**/*"
  ],
  "author": "Iyobo Eki",
  "license": "MIT",
  "dependencies": {
    "@hapi/boom": "^9.0.0",
    "class-transformer": "^0.2.3",
    "koa-body": "^4.1.0",
    "koa-bodyparser": "^4.2.1",
    "koa-cookie": "^1.0.0",
    "koa-router": "^8.0.6",
    "lodash": "^4.17.14",
    "reflect-metadata": "^0.1.13"
  },
  "peerDependencies": {
    "class-validator": "^0.x"
  },
  "devDependencies": {
    "@types/boom": "^7.2.1",
    "@types/jest": "^25.1.1",
    "@types/koa": "^2.0.49",
    "@types/lodash": "^4.14.136",
    "@types/node": "^12.6.2",
    "class-validator": "^0.x",
    "jest": "^25.1.0",
    "koa": "^2.7.0",
    "supertest": "^4.0.2",
    "ts-jest": "^25.2.0",
    "ts-node": "^8.3.0",
    "tslint": "^6.0.0",
    "typescript": "^3.5.3"
  }
}
